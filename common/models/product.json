{
  "name": "Product",
  "base": "PersistedModel",
  "idInjection": true,
  "forceId": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "productId": {
      "type": "string",
      "id": true,
      "index": true,
      "isArray": false,
      "generated": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "number",
      "required": true
    },
    "status": {
      "type": "string",
      "default": "active"
    }
  }
}
